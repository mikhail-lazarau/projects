  "version": "1.0.0",
  "type": "module",
  "description": "Backend for the expense tracker application",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
